<% if session["decidim-tunnistamo.signed_in"] %>
<script type="text/javascript">
(function() {
  $(document).ready(function() {
    var tunnistamoSignOutUrl = <%= decidim_tunnistamo.user_tunnistamo_omniauth_logout_path.to_json.html_safe %>;

    $(".sign-out-link").on("click.tunnistamo", function(ev) {
      ev.preventDefault();
      ev.stopPropagation();

      var link = this;

      var $frame = $("<iframe></iframe>");
      $frame.css({
        width: 10,
        height: 10,
        border: 0
      });
      $("body").append($frame);

      $frame.on("load", function() {
        $(link).off("click.tunnistamo");
        link.click();
      })
      $frame.attr("src", tunnistamoSignOutUrl);
    });
  });
})(jQuery);
</script>
<% end %>
