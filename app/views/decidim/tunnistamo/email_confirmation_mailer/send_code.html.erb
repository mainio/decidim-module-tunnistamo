<p><%= t(".welcome", name: @user.name) %></p>

<p><%= t(".content") %></p>

<p><%= t(".details") %></p>

<div style="display: flex; justify-content: center; margin: 2rem 0; font-size: 32px;">
  <span style="padding: .5rem; border: 2px solid #000; background-color: #ccc;"><%= "#{@prefix}-" %></span>
  <span style="padding: .5rem; border: 2px solid #000;" id="code"><%= @code %></span>
</div>

<p><%= t(".alternatively") %></p>

<table class="button expanded radius">
  <tr>
    <td>
      <table>
        <tr>
          <td>
            <%= link_to t(".verify_email"), confirmation_url(@user, confirmation_token: @confirmation_token, host: @organization.host), target: :blank %>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>
